<!DOCTYPE html>
<html>
<head>
		<style>
				.container {
			border: 1px solid #ccc;
			}
			.color-red{
    color: #F00;
}
				</style>
	<title>Login</title>
	<script>
		function validateForm() {
			var message;
			 message = document.getElementById("error");
			  message.innerHTML = "";
		  var userName = document.forms["frm"]["userName"].value;
		  var password = document.forms["frm"]["password"].value;
		  var letterNumber = new RegExp("^(?=.*[a-z])(?=.*[0-9])");
		  var patt = new RegExp("^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.{8,})");
		  if (userName == null || userName == '') {
			message.innerHTML = "User Name is mandatory";
			return false;
		  } else if ((letterNumber.test(userName)) == false){
			message.innerHTML = "User Name must be alphanumeric";
			return false;
		} else if (password == null || password == "") {
			message.innerHTML = "Password is mandatory";
			return false;
		} else if ((patt.test(password)) == false){
			message.innerHTML = "Invalid password";
			return false;
		}
		else if (userName != "admin01" && password != "AdminPass01"){
			message.innerHTML = "Invalid Login credentials";
			return false;
		}
		return true;
		}
	  </script>
</head>
<body id="login">
				<div align="center">
										<h1>ABC Courier Services</h1>
											</div>
											<hr>
											<br/>
											<div id="error"></div>
					<form name="frm" onsubmit="return validateForm()" method="post">
								<div class="container">
										<div align = "center">
												<h2>Login</h2>
												</div>
												<hr>
												<br/>
		                    <div align = "center">
		                        <label for="userName">User Name</label>
		                            <input type="text"  id="userName"  name="userName" maxlength = "30"/>
							</div>
							<br/>
		                    <div align = "center">
		                        <label for="password" >Password</label>
		                            <input type="password"  id="password"  name="password" maxlength = "30"/>
		                    </div>
								<br/>
		                        <div align = "center">
		                            <button type="submit" id="login"> Login </button>
		                        </div>
							</div>
						</form>
						
</body>

</html>